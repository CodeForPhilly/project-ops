{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["repository"],
  "additionalProperties": false,
  "properties": {
    "repository": {
      "type": "string",
      "pattern": "^github\\.com/[\\w-]+/[\\w-]+$",
      "description": "GitHub repository path in the format github.com/org/repo"
    }
  }
}
